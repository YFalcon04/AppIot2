<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1"
    android:padding="16dp"
    android:background="@drawable/fondo"
    android:id="@+id/historial">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="1dp"
        android:background="@color/orange2">

        <TextView
            android:id="@+id/header_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/app_porton"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_weight="1"
            android:gravity="start" />

        <Button
            android:id="@+id/btnConfiguracion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:backgroundTint="@color/green"
            android:text="@string/config"
            app:icon="@drawable/tuerca"
            android:textColor="@color/black" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/historial_de_uso"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginVertical="10dp"
        android:textStyle="bold"
        android:textColor="@color/orange" />

    <ListView
        android:id="@+id/lista_historial"
        android:layout_width="match_parent"
        android:layout_height="134dp"
        android:layout_marginTop="5dp" />

    <EditText
        android:id="@+id/edit_text_usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/usuario1"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edit_text_accion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/acci_n"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edit_text_fecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/fechs"
        android:textSize="20sp" />


    <Button
        android:id="@+id/btn_agregar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/agregar"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/pink"/>

    <Button
        android:id="@+id/btn_actualizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/actualizar"
        android:layout_marginTop="1dp"
        android:backgroundTint="@color/blue"/>

    <Button
        android:id="@+id/btn_eliminar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/eliminar"
        android:layout_marginTop="1dp"
        android:backgroundTint="@color/purple"/>

    <Button
        android:id="@+id/btn_volverMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="@string/volver_menu"
        android:backgroundTint="@color/orange2" />
</TableLayout>
